
<div class="main-container">
  <div class="content-container">

    {{liquid-outlet class="bar"}}

      <div class="event-container liquid-container">
        <h2>{{model.name}}</h2>

        <p>{{model.description}}</p>

        <div class="prize-container">

          <h3>{{model.prize.name}}</h3>

          <img class="prize-pic" data-lf="prize-image:{{model.id}}" src="{{model.prize.imgUrl}}" alt="">

          <p>{{model.prize.description}}</p>
        </div>

        {{#if model.active}}
          <p>Adventurers are already seeking this treasure.</p>
        {{else}}
          <p>No adventurers currently on this quest.</p>
        {{/if}}
        <p>
          Price: ${{model.cost}}
        </p>
      </div>



      <div class="buy-container">

        {{#if model.active}}

        <p>This event is unavailable for purchase.</p>

        {{else}}

        <button {{action buyThis model.id}} class="btn btn-save">Purchase</button>
        {{/if}}
      </div>
    </div>
</div>

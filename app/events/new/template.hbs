<div class="title-container">
  <h2 class="new-title">New Event</h2>
</div>

<div class="form-container">
  <form class="new-event__form">

    <p class="form-input">
      <label class="form-label">Event Name</label>
      {{input class="input-field" type="text" placeholder="Name" value=model.name}}
    </p>

    <p class="form-input">
      <label class="form-label">Event Type</label>
      {{input class="input-field" type="text" placeholder="Type" value=model.type}}
    </p>

    <p class="form-input">
      <label class="form-label">Event Description</label>
      {{textarea class="input-field" placeholder="Desc." value=model.description}}
    </p>

    <p class="form-input">
      <label class="form-label">Event Cost</label>
      {{input class="input-field" type="number" placeholder="Cost" value=model.Cost}}
    </p>

    <p class="form-input">
      <label class="form-label">Estimated Time to Complete</label>
      {{input class="input-field" type="number" placeholder="ETC" value=model.etc}}
    </p>

    <p class="form-input">
      <label class="form-label">Search Area</label>
      {{input class="input-field" type="text" placeholder="Search Area." value=model.searchArea}}
    </p>

                    {{!--Start of Prize Form  --}}

    <div class="title-container">
      <h3 class="prize-form__title">Prize</h3>
    </div>

    <div class="event-prize__container">

      <p class="form-input">
        <label class="form-label">Prize Name</label>
        {{input class="input-field" type="text" placeholder="Name" value=model.prize.name}}
      </p>

      <p class="form-input">
        <label class="form-label">Prize Image</label>
        {{input class="input-field" type="text" placeholder="Img" value=model.prize.imgUrl}}
      </p>

      <p class="form-input">
        <label class="form-label">Prize Description</label>
        {{textarea class="input-field" placeholder="Desc." value=model.prize.description}}
      </p>

    </div>

    <div class="btn-container">
      <button class="btn save-btn">Save</button>
    </div>
  </form>
</div>

{{#link-to "index"}}
  <button>Home</button>
{{/link-to}}

<h1>Events</h1>

<ul>
  {{#each model as |event|}}

    <li>
      <p>{{event.name}}</p>
      <p>{{event.type}}</p>
      <p>{{event.cost}}</p>
      <p>{{event.description}}</p>
      <p>{{event.etc}}</p>
      <p>{{event.prize}}</p>
      <p>{{event.searchArea}}</p>
      <p>{{event.active}}</p>
      {{#link-to "events.details" event.id}}
      <button>Details</button>
      {{/link-to}}
    </li>

  {{/each}}
  {{outlet}}
</ul>

<h1>CLUES</h1>


<ul>
  {{#each model.clues as |clue|}}
  <li>
    <p>{{clue.description}}</p>
    {{#link-to "events.clues.edit" clue.id}}
    {{fa-icon "pencil"}}
    {{/link-to}}
  </li>
  {{/each }}

</ul>

<h2>Add A Clue</h2>
{{#simple-form class="new-event__form" onsubmit=(action saveClue model) as |clue|}}

  <p class="form-input">
    <label class="form-label">Clue Description</label>
    {{paper-input textarea=true class="input-field" label="Description" value=clue.description}}
  </p>

  <div class="btn-container">
    <button class="btn save-btn">Add Clue</button>
  </div>
{{/simple-form}}
